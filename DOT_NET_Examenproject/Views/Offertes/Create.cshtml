@model DOT_NET_Examenproject.Models.Offerte

@{
    ViewData["Title"] = "Aanmaken";
}

<h1>Aanmaken</h1>

<h4>Offerte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TitelOfferte" class="control-label"></label>
                <input asp-for="TitelOfferte" class="form-control" />
                <span asp-validation-for="TitelOfferte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotaalBedrag" class="control-label"></label>
                <input asp-for="TotaalBedrag" class="form-control" />
                <span asp-validation-for="TotaalBedrag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KlantId" class="control-label"></label>
                <select asp-for="KlantId" class ="form-control" asp-items="ViewBag.KlantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BedrijfId" class="control-label"></label>
                <select asp-for="BedrijfId" class ="form-control" asp-items="ViewBag.BedrijfId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht van offertes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
